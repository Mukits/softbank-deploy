<Configuration status="info" name="dss-module" packages="">
    <Appenders>
        <File name="fout" fileName="softbank.log" append="true">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="error">
            <!--<AppenderRef ref="stdout"/>-->
            <AppenderRef ref="fout"/>
        </Root>
        <Root level="INFO">
            <!--<AppenderRef ref="stdout" />-->
            <AppenderRef ref="fout"/>
        </Root>
    </Loggers>
</Configuration>
